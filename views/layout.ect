<!DOCTYPE html>
<html>
  <head>
    <title>Achivster</title>
    <link href="/stylesheets/style.css" rel="stylesheet" />
    <link href="/stylesheets/modern.css" rel="stylesheet" />
    <link href="/stylesheets/dashboard.css" rel="stylesheet" />
    <link href="/stylesheets/websymbols.css" rel="stylesheet" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.1.min.js"></script>
  </head>
  <body class="modern-ui">
    <% if @session.auth : %>
    <% else : %>
      <div id="login_zone"></div>
    <% end %>
    <div class="page">
      <div class="page-header">
        <div class="page-header-content">
          <% if @service_info : %>
            <h1><i class="icon-arrow-left-3 dashboard_back" style="cursor: pointer;"></i><%- @title %></h1>
          <% else : %>
            <h1><%- @title %></h1>
          <% end %>
          <div class="nav-bar bg-color-white">
            <div class="nav-bar-inner">
              <ul class="menu place-left">
                <li><a href="/offer"><i class="websymbols fg-color-red">W</i><span class="fg-color-red">Акция!</span></a></li>
              </ul>
              <% if @session.auth : %>
              <ul class="menu place-right">
                <li id="notifications"></li>
                <li><a href="/dashboard"><i class="icon-gift"></i>dashboard</a></li>
                <li><a href="/top"><i class="icon-trophy"></i>top</a></li>
                <li><a href="/profile"><i class="icon-user"></i>profile</a></li>
                <li><a href="/logout"><i class="icon-exit"></i>logout</a></li>
              </ul>
              <% else : %>
              <ul class="menu place-right">
                <li class="login_or_register" id="login"><a href="#"><i class="icon-enter"></i>login</a></li>
                <li class="login_or_register" id="register"><a href="#"><i class="icon-key"></i>register</a></li>
              </ul>
              <% end %>
            </div>
          </div>
          
        </div>
      </div>
      <div class="page-region">
        <div class="page-region-content">
          <% content %>
        </div>
      </div>
      
      <div class="page footer">
        <center>
          <a href="https://vk.com/achivster">
            <img src="/images/share/vk.png" class="social_button_group">
          </a>
          <a href="https://twitter.com/achivster_ru">
            <img src="/images/share/twitter.png" class="social_button_group">
          </a>
          <a href="http://www.facebook.com/Achivster">
            <img src="/images/share/facebook.png" class="social_button_group"></h3>
          </a>
        </center>
      </div>
    
    </div>
  </body>
</html>

<script src="/javascripts/sync.js"></script>
<script src="/javascripts/login.js"></script>
<script src="/javascripts/informer.js"></script>
<script src="/javascripts/googleanalitics.js"></script>
